{
  "canny": {
    "apiKey": "${CANNY_API_KEY}",
    "baseUrl": "${CANNY_BASE_URL:https://canny.io/api/v1}",
    "workspace": {
      "name": "My Company",
      "defaultBoardId": "${CANNY_DEFAULT_BOARD}",
      "customStatuses": [
        "open",
        "under review",
        "planned",
        "in progress",
        "complete",
        "closed"
      ],
      "customFields": {},
      "boards": {},
      "tags": {}
    },
    "prioritization": {
      "framework": "RICE",
      "weights": {
        "votes": 0.3,
        "revenue": 0.4,
        "strategicFit": 0.3
      },
      "riceConfig": {
        "reachMultiplier": 1.0,
        "impactScale": 3,
        "confidenceScale": 1.0
      },
      "highRevenueThreshold": 50000
    },
    "jira": {
      "enabled": false,
      "projectKey": "",
      "issueTypes": {
        "feature": "Story",
        "bug": "Bug",
        "improvement": "Task"
      },
      "fieldMappings": {},
      "statusSync": {
        "enabled": false,
        "mappings": {
          "To Do": "open",
          "In Progress": "in progress",
          "Done": "complete"
        }
      }
    },
    "defaults": {
      "pagination": {
        "limit": 10,
        "maxTotal": 50
      },
      "compactMode": true,
      "defaultFields": ["id", "title", "status", "score", "url"],
      "includeComments": false,
      "commentLimit": 5
    },
    "cache": {
      "enabled": true,
      "ttl": {
        "boards": 3600,
        "tags": 3600,
        "users": 86400,
        "posts": 300,
        "comments": 180
      },
      "maxSize": 100
    },
    "rateLimit": {
      "requests": 100,
      "window": 60000,
      "retryAfter": 5000,
      "maxRetries": 3
    }
  },
  "server": {
    "transport": "stdio",
    "toolMode": "readonly",
    "http": {
      "port": 3000,
      "host": "0.0.0.0",
      "cors": {
        "enabled": true,
        "origins": ["*"]
      }
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "console": true
  },
  "prompts": []
}
