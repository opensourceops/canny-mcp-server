# Canny API Configuration (required)
CANNY_API_KEY=your-canny-api-key-here

# Canny Settings
# CANNY_BASE_URL=https://canny.io/api/v1
# CANNY_DEFAULT_BOARD=your-default-board-id-here
# CANNY_WORKSPACE_NAME=Default
# CANNY_CUSTOM_STATUSES=open,under review,planned,in progress,complete,closed

# Jira Integration
# CANNY_JIRA_ENABLED=false
# CANNY_JIRA_PROJECT_KEY=

# Pagination & Display
# CANNY_PAGINATION_LIMIT=10
# CANNY_PAGINATION_MAX=50
# CANNY_COMPACT_MODE=true

# Cache
# CANNY_CACHE_ENABLED=true
# CANNY_CACHE_MAX_SIZE=100

# Rate Limiting
# CANNY_RATE_LIMIT_REQUESTS=100
# CANNY_RATE_LIMIT_WINDOW=60000

# Server Configuration
# SERVER_TRANSPORT=stdio
# CANNY_TOOL_MODE=readonly          # all | readonly | toolsets: discovery,posts,engagement,users,jira,batch
# SERVER_HTTP_PORT=3000
# SERVER_HTTP_HOST=0.0.0.0

# Logging
# LOG_LEVEL=info
# LOG_FORMAT=json
